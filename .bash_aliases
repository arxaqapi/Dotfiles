# ~/.bash_aliases
# author: arxaqapi
# https://github.com/arxaqapi/Dotfiles


# Frequent commands
alias c=clear
alias e=exit
alias ls="ls --color=auto"
alias ll="ls -lah"
alias tree="tree -C"
alias t="tree"
alias tt="tree -L 2"


# Programming language specific
alias m=make

## Python
alias python=python3
alias p=python
alias pp=pipenv
alias ppr="pipenv run"

# Extra
## Archlinux specific
alias pacman=aura

## Nvim
alias vim=nvim
